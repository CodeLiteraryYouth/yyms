<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leanin.mapper.FocusPatientMapper">
  <resultMap id="BaseResultMap" type="com.leanin.domain.vo.FocusPatientVo">
    <id column="focus_id" jdbcType="BIGINT" property="focusId" />
    <result column="patient_id" jdbcType="VARCHAR" property="patientId" />
    <result column="patient_name" jdbcType="VARCHAR" property="patientName" />
    <result column="patient_sex" jdbcType="INTEGER" property="patientSex" />
    <result column="patient_birthday" jdbcType="VARCHAR" property="patientBirthday" />
    <result column="patient_phone" jdbcType="VARCHAR" property="patientPhone" />
    <result column="patient_id_card" jdbcType="VARCHAR" property="patientIdCard" />
    <result column="focus_status" jdbcType="INTEGER" property="focusStatus" />
    <result column="patient_source" jdbcType="INTEGER" property="patientSource" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="inhos_no" property="inhosNo" />
    <result column="open_id" property="openId" />
    <result column="patient_ward" property="patientWard" />
    <result column="area_code" property="areaCode" />
  </resultMap>
  <sql id="Base_Column_List">
    focus_id, patient_id, patient_name, patient_sex, patient_birthday, patient_phone, 
    patient_id_card, focus_status, patient_source,user_id,inhos_no,open_id,patient_ward,area_code
  </sql>
  <select id="findPatientList" parameterType="java.lang.String" resultMap="BaseResultMap">
  	 select 
    <include refid="Base_Column_List" />
    from leanin_focus_patient
    where focus_status > 0
    <if test="patientName != null">
       and patient_name like CONCAT('%',#{patientName},'%')
    </if>
  </select>
  <select id="selectFocusPatientById" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from leanin_focus_patient where focus_status > 0
    and patient_id = #{patientId}
    and user_id = #{userId}
  </select>

    <select id="findPatientByFocusId" resultMap="BaseResultMap">
      select
      <include refid="Base_Column_List"/>
      from leanin_focus_patient
      where focus_id =#{focusId} and focus_status > 0
    </select>

    <update id="updatePatientStatus" >
    update leanin_focus_patient set focus_status=#{status}
    where focus_id = #{focusId}
  </update>
  <insert id="insertFocusPatient" parameterType="com.leanin.domain.vo.FocusPatientVo">
    insert into leanin_focus_patient
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="patientId != null">
        patient_id,
      </if>
      <if test="patientName != null">
        patient_name,
      </if>
      <if test="patientSex != null">
        patient_sex,
      </if>
      <if test="patientBirthday != null">
        patient_birthday,
      </if>
      <if test="patientPhone != null">
        patient_phone,
      </if>
      <if test="patientIdCard != null">
        patient_id_card,
      </if>
      <if test="focusStatus != null">
        focus_status,
      </if>
      <if test="patientSource != null">
        patient_source,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="inhosNo != null">
        inhos_no,
      </if>
      <if test="openId != null">
        open_id,
      </if>
      <if test="patientWard != null">
        patient_ward,
      </if>
      <if test="areaCode != null">
        area_code,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="patientId != null">
        #{patientId,jdbcType=VARCHAR},
      </if>
      <if test="patientName != null">
        #{patientName,jdbcType=VARCHAR},
      </if>
      <if test="patientSex != null">
        #{patientSex,jdbcType=INTEGER},
      </if>
      <if test="patientBirthday != null">
        #{patientBirthday,jdbcType=VARCHAR},
      </if>
      <if test="patientPhone != null">
        #{patientPhone,jdbcType=VARCHAR},
      </if>
      <if test="patientIdCard != null">
        #{patientIdCard,jdbcType=VARCHAR},
      </if>
      <if test="focusStatus != null">
        #{focusStatus,jdbcType=INTEGER},
      </if>
      <if test="patientSource != null">
        #{patientSource,jdbcType=INTEGER},
      </if>
      <if test="userId != null">
        #{userId},
      </if>
      <if test="inhosNo != null">
        #{inhosNo},
      </if>
      <if test="openId != null">
        #{openId},
      </if>
      <if test="patientWard != null">
        #{patientWard},
      </if>
      <if test="areaCode != null">
        #{areaCode},
      </if>
    </trim>
  </insert>
</mapper>